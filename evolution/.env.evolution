# Evolution Engine Configuration
# Created for integration/runtime-wiring

# Execution Configuration
EXECUTION_VENUE=local_docker
ENVIRONMENT=development

# Seed Budget Configuration
SEED_BUDGET=500
SEED_CURRENCY=USD

# Summon Channel Configuration
SUMMON_CHANNEL=you@example.com
SUMMON_URGENCY_THRESHOLD=HIGH
NOTIFICATION_TYPE=email

# Review Cadence (cron format)
# Daily at 03:00 UTC
REVIEW_CADENCE=0 3 * * *
EVOLUTION_ENABLED=true

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_GROUP_ID=evolution-engine
KAFKA_AUTO_OFFSET_RESET=earliest

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_DB=evolution_db
POSTGRES_USER=evolution
POSTGRES_PASSWORD=evolution_secret

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_DB=0

# MinIO Configuration
MINIO_ENDPOINT=localhost:9001
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=evolution-artifacts

# Credit Limits (per agent per day)
CREDIT_LIMIT_AUDITOR=500
CREDIT_LIMIT_REVIEWER=300
CREDIT_LIMIT_ARCHITECT=1000
CREDIT_LIMIT_IMPLEMENTOR=800
CREDIT_LIMIT_TREASURER=200

# Agent Configuration
AGENT_HEALTH_CHECK_INTERVAL=30
AGENT_RESTART_ON_FAILURE=true
AGENT_MAX_RESTARTS=3

# Evolution Cycle Configuration
EVOLUTION_CYCLE_TIMEOUT=3600
EVOLUTION_MAX_PROPOSALS_PER_CYCLE=10
EVOLUTION_MIN_FITNESS_SCORE=0.7

# Treasury Configuration
TREASURY_LOW_BALANCE_ALERT=100
TREASURY_CRITICAL_BALANCE=50
TREASURY_RUNWAY_DAYS_MIN=60

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_OUTPUT=console,file
LOG_FILE=/var/log/evolution/evolution.log

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_TRACING=false

# Safety Controls
PRODUCTION_PROTECTION=true
HUMAN_OVERRIDE_ENABLED=true
UPGRADE_ONLY_ENFORCEMENT=strict